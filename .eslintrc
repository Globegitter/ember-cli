{
  "parser": "babel-eslint",
  "rules" : {
    "strict"                           : 2,
    "no-underscore-dangle"             : 0,
    "no-multi-spaces"                  : 0,
    "key-spacing"                      : 0,
    "no-shadow"                        : 0,
    "consistent-return"                : 2,
    "no-use-before-define"             : 0,
    "new-parens"                       : 2,
    "no-cond-assign"                   : 2,
    "space-after-keywords"             : 0,
    "space-infix-ops"                  : 2,
    "comma-spacing"                    : [2, {
                                          "before": false,
                                          "after": true
                                          }],
    "comma-dangle"                     : [2, "never"],
    "no-multiple-empty-lines"          : [2, {"max": 2}],
    "quotes"                           : 0,
    "eqeqeq"                           : [2, "smart"],
    "wrap-iife"                        : [2, "inside"],
    "indent"                           : [2, 2],
    "brace-style"                      : [2, "1tbs", { "allowSingleLine": true }],
    "spaced-line-comment"              : [2, "always", {"exceptions": ["-","+"]}],
    "space-before-function-parentheses": [2, {
                                            "anonymous" : "never",
                                            "named" : "never"
                                          }]
  },
  "env": {
    "node": true,
    "es6" : true
  }
}